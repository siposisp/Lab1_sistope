# Compilador

CC = gcc

# Nombres de los archivos ejecutables
# - Primer archivo cut 
# - Segundo archivo count
# - Tercer archivo srep

SRC = cut.c count.c srep.c

# Archivos ejecutables obtenidos
# - Primer archivo cut 
# - Segundo archivo count
# - Tercer archivo srep

TARGETS = cut count srep  

# Regla por defecto (la primera)

all: $(TARGETS)

# Regla para compilar cada ejecutable

%: %.c
	$(CC) -o $@ $<

# Regla para limpiar los ejecutables y los archivos de texto

.PHONY: clean
clean:
	rm -f $(TARGETS) *.o out*.txt
		